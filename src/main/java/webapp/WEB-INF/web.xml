<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
         http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>com.platinum.controllers.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>RegistroServlet</servlet-name>
        <servlet-class>com.platinum.controllers.RegistroServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RegistroServlet</servlet-name>
        <url-pattern>/registro</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>CuentaServlet</servlet-name>
        <servlet-class>com.platinum.controllers.CuentaServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CuentaServlet</servlet-name>
        <url-pattern>/cuenta</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>TransferenciaServlet</servlet-name>
        <servlet-class>com.platinum.controllers.TransferenciaServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>TransferenciaServlet</servlet-name>
        <url-pattern>/transferencia</url-pattern>
    </servlet-mapping>
</web-app>